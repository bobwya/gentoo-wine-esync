+C_ASSERT( FIELD_OFFSET(struct get_esync_fd_request, handle) == 12 );
+C_ASSERT( sizeof(struct get_esync_fd_request) == 16 );
+C_ASSERT( sizeof(struct get_esync_fd_reply) == 8 );
 
 #endif  /* WANT_REQUEST_HANDLERS */
 
