+}
+
 static const dump_func req_dumpers[REQ_NB_REQUESTS] = {
     (dump_func)dump_new_process_request,
     (dump_func)dump_get_new_process_info_request,
@@ -4845,6 +4850,7 @@ static const dump_func req_dumpers[REQ_NB_REQUESTS] = {
